---
import config from "@/config/config.json";
import {
  IoLogoLinkedin,
  IoLogoReddit,
} from "react-icons/io5";
import { FaXTwitter } from "react-icons/fa6";

const { base_url }: { base_url: string } = config.site;
const {
  title,
  description,
  slug,
  className,
}: { title?: string; description?: string; slug?: string; className?: string } =
  Astro.props;
---

<ul class={`${className}`}>
  <li class="inline-block">
    <a
      aria-label="linkedin share button"
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${base_url}/${slug}&title=${title}&summary=${description}&source=${base_url}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoLinkedin />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="X (twitter) share button"
      href={`https://twitter.com/intent/tweet/?text=${title}&amp;url=${base_url}/${slug}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <FaXTwitter />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="reddit share button"
      href={`https://reddit.com/submit?url=${base_url}/${slug}&title=${title}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoReddit />
    </a>
  </li>
</ul>
